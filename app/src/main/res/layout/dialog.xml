<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="广州慕吉云溪山居   常规 | 西厢房"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#BBBBBB" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_centerVertical="true"
        android:text="更改库存"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/et_library"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text"
            android:background="@drawable/angle_straight"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_data_start"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/text2"
            android:gravity="center"
            android:text="2020.12.05"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/angle_corner"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="至"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_data_end"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toEndOf="@+id/text2"
            android:text="2020.12.05"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/angle_corner"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/bt_open"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/text3"
            android:gravity="center"
            android:text="开房"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/angle_corner"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="    "
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/bt_close"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/text3"
            android:gravity="center"
            android:text="关房"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:background="@drawable/angle_corner"
            tools:ignore="HardcodedText" />


    </RelativeLayout>


</LinearLayout>
