<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".My.Activity.My_Pshome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <include layout="@layout/main_title_bar" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="58dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/head"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/head"
            android:text="旅影官方影视"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/attention"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/angle_corner"
            android:gravity="center"
            android:text="关注"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <!--获赞/关注/粉丝/喜欢-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/head"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <!--获赞-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="获赞"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/get_praise"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="35dp"
                    android:gravity="center_vertical"
                    android:text="1.56W"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <!--关注-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="关注"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/get_attention"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="35dp"
                    android:gravity="center_vertical"
                    android:text="876"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <!--粉丝-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="粉丝"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/get_fans"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="35dp"
                    android:gravity="center_vertical"
                    android:text="1987"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <!--喜欢-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="喜欢"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/get_love"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="35dp"
                    android:gravity="center_vertical"
                    android:text="545"
                    android:textColor="#000000"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="179dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/angle_straight">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="用户已开通名宿,小店"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/enter_merchant"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/angle_corner"
                android:gravity="center"
                android:text="进入商家主页"
                android:textColor="#000000"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="112dp"
            android:text="创作中心"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <!--全部/小视频/短视频-->
        <LinearLayout
            android:id="@+id/centre_navigation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="230dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="142dp"
            android:layout_below="@+id/head"
            android:layout_alignParentStart="true"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <!--全部-->
            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/img_all"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/angle_corner"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/navigation_all"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <!--小视频-->
            <RelativeLayout
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/img_small"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/angle_corner"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/small_video"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="小视频"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
            <!--短视频-->
            <RelativeLayout
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/img_short"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/angle_corner"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/short_video"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="短视频"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>

        <!--主体-->
        <FrameLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/head"
            android:layout_marginTop="170dp"
            android:background="@android:color/white" />

    </RelativeLayout>


</LinearLayout>