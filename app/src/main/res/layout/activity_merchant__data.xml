<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_title_bar"/>

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_day"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="日"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#C3C3C3" />

        <RelativeLayout
            android:id="@+id/rl_month"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="月"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#C3C3C3" />

        <RelativeLayout
            android:id="@+id/rl_quarter"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_quarter"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="季度"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#C3C3C3" />

        <RelativeLayout
            android:id="@+id/rl_year"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="年"
                android:textColor="#000000"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/down_pull"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="#000000"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/angle_corner"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/angle_straight"
            android:layout_toEndOf="@+id/down_pull"
            android:layout_toStartOf="@+id/bt_search"
            android:hint="请输入查询订单号或联系电话"
            android:textColorHint="#BBBBBB"
            android:textSize="15sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText"
            android:importantForAutofill="no"
            android:inputType="number" />

        <Button
            android:id="@+id/bt_search"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/angle_corner"
            android:text="搜索"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

</LinearLayout>